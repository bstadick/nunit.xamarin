<?xml version="1.0" encoding="utf-8" ?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NUnit.Runner.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Visual Elements -->
            <Color x:Key="DefaultBackground">White</Color>
            <Color x:Key="WindowsBackground">White</Color>

            <!-- Buttons -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#005B0C" />
                <Setter Property="BorderColor" Value="#005B0C" />
                <Setter Property="BorderRadius" Value="0" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="HeightRequest" Value="42" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <!-- Labels -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#303030" />
            </Style>

            <!-- Strings -->
            <x:String x:Key="NoneString">&lt;none&gt;</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>